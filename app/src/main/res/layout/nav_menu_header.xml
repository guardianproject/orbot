<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_primary"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/torStatsGroup"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="downloadLabel, tvDownloadStat, proxyLabel, tvPorts, uploadLabel, tvUploadStat, torVersion"/>
    
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/torVersion"
        android:textStyle="bold"
        tools:text="Tor v23.23 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/downloadLabel"
        app:layout_constraintTop_toBottomOf="@id/torVersion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/main_layout_download"/>

    <TextView
        android:layout_marginLeft="8dp"
        tools:text="3432kb / 23/MB"
        app:layout_constraintTop_toBottomOf="@id/torVersion"
        app:layout_constraintStart_toEndOf="@id/downloadLabel"
        android:id="@+id/tvDownloadStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/uploadLabel"
        app:layout_constraintTop_toBottomOf="@id/downloadLabel"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/main_layout_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="8dp"
        tools:text="3432kb / 23/MB"
        app:layout_constraintTop_toBottomOf="@id/downloadLabel"
        app:layout_constraintStart_toEndOf="@id/uploadLabel"
        android:id="@+id/tvUploadStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/proxyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/proxy_ports"
        app:layout_constraintTop_toBottomOf="@id/uploadLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/uploadLabel"
        tools:text="SOCKS 2432 | HTTP 2131"
        app:layout_constraintStart_toEndOf="@id/proxyLabel"
        android:id="@+id/tvPorts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>