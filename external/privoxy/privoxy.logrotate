/var/log/privoxy/logfile {
   missingok
   compress
   size 1M
   postrotate
        /sbin/service privoxy reload  2> /dev/null || true
   endscript
}

/var/log/privoxy/jarfile {
   missingok
   compress
   size 1M
   postrotate
        /sbin/service privoxy reload  2> /dev/null || true
   endscript
}
